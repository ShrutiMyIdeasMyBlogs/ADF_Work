{
	"name": "Assignment_10_RestApi_Tricky_2",
	"properties": {
		"activities": [
			{
				"name": "ForEach activity to copy data from API to json",
				"type": "ForEach",
				"dependsOn": [],
				"userProperties": [],
				"typeProperties": {
					"items": {
						"value": "@createArray('India','China','US','UK','Russia')\n",
						"type": "Expression"
					},
					"isSequential": true,
					"activities": [
						{
							"name": "Copy data from API to Json File",
							"type": "Copy",
							"dependsOn": [],
							"policy": {
								"timeout": "0.12:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"source": {
									"type": "RestSource",
									"httpRequestTimeout": "00:01:40",
									"requestInterval": "00.00:00:00.010",
									"requestMethod": "GET",
									"paginationRules": {
										"supportRFC5988": "true"
									}
								},
								"sink": {
									"type": "JsonSink",
									"storeSettings": {
										"type": "AzureBlobFSWriteSettings"
									},
									"formatSettings": {
										"type": "JsonWriteSettings"
									}
								},
								"enableStaging": false
							},
							"inputs": [
								{
									"referenceName": "RestAPI_Dynamic_DS",
									"type": "DatasetReference",
									"parameters": {
										"CountryName": {
											"value": "@item()",
											"type": "Expression"
										}
									}
								}
							],
							"outputs": [
								{
									"referenceName": "JSON_Generic_filename_filepath_DS",
									"type": "DatasetReference",
									"parameters": {
										"filename": {
											"value": "@concat(item(),'.json')",
											"type": "Expression"
										},
										"filepath": "Assignment_10_tricky_2"
									}
								}
							]
						}
					]
				}
			}
		],
		"annotations": []
	}
}